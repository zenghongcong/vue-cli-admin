html, body, #app {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

a {
    text-decoration: none;
}

img {
    display: block;
}

#app {
    .el-header {
        display: flex;
        justify-content: space-between;
        line-height: 48px;
        background: #515a6e;
        font-size: 15px;
        color: #fff;
        i{
            font-size: 16px;
        }
        .handle {
            display: flex;

            a {
                margin-left: 15px;
                color: #fff;
                &:hover{
                    color: #409eff;
                }
            }
        }
    }
}